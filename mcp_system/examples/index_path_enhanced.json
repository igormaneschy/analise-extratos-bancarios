{
  "name": "index_path_enhanced",
  "description": "Indexa diretório com busca semântica e auto-indexação",
  "request": {
    "jsonrpc": "2.0",
    "method": "index_path",
    "params": {
      "path": "src/",
      "recursive": true,
      "enable_semantic": true,
      "auto_start_watcher": true,
      "exclude_globs": ["**/.git/**", "**/node_modules/**", "**/__pycache__/**"]
    },
    "id": 1
  },
  "expected_response": {
    "status": "ok",
    "indexed_files": 25,
    "chunks": 150,
    "enhanced_features": true,
    "auto_indexing_started": true
  }
}