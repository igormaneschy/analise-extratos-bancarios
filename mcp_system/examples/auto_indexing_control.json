{
  "name": "auto_indexing_control",
  "description": "Controle do sistema de auto-indexação",
  "examples": [
    {
      "action": "start",
      "request": {
        "jsonrpc": "2.0",
        "method": "auto_index",
        "params": {
          "action": "start"
        },
        "id": 3
      },
      "expected_response": {
        "status": "started",
        "running": true
      }
    },
    {
      "action": "status",
      "request": {
        "jsonrpc": "2.0", 
        "method": "auto_index",
        "params": {
          "action": "status"
        },
        "id": 4
      },
      "expected_response": {
        "status": "available",
        "running": true,
        "stats": {
          "enabled": true,
          "watch_path": "/projeto/src",
          "files_monitored": 150,
          "events_processed": 23,
          "last_indexing": 1640995200.0
        }
      }
    },
    {
      "action": "stop",
      "request": {
        "jsonrpc": "2.0",
        "method": "auto_index", 
        "params": {
          "action": "stop"
        },
        "id": 5
      },
      "expected_response": {
        "status": "stopped",
        "running": false
      }
    }
  ]
}