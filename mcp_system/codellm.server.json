{
  "name": "code-intelligence-mcp",
  "version": "1.0.0",
  "description": "Sistema MCP para desenvolvimento assistido por IA",
  "server": {
    "command": "python",
    "args": [
      "mcp_system/mcp_server_enhanced.py"
    ],
    "env": {
      "CODELLM_PROJECT_PATH": ".",
